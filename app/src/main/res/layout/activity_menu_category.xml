<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.example.dhruv.sooadproject.Menu_category">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="100dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/soups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soups"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/starters"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starters"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/main_course"
                android:layout_marginTop="16dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Course"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/breads"
                android:layout_marginTop="16dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breads"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/rice_biryani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rice and Biryani"
                android:layout_marginTop="16dp"

                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/fried_rice_noodles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:text="Fried Rice and Noodles"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/pizza_pasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:text="Pizzas and Pastas"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/burgers"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"

                android:layout_height="wrap_content"
                android:text="Burgers"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/deserts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:text="Deserts"
                android:textColor="#ffffff" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
